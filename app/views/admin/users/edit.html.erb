<%
  @heading = 'Edit User'
  content_for :content do
%>
    <%= form_for @user, url: admin_update_user_path(@user), html: { class: 'form-horizontal form-label-left' }, method: :patch do |f| %>
        <div class="form-group">
          <label for="user_name" class="control-label col-md-3 col-sm-3 col-xs-12">Name</label>
          <div class="col-md-6 col-xs-12">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="user_name" class="control-label col-md-3 col-sm-3 col-xs-12">Email</label>
          <div class="col-md-6 col-xs-12">
            <%= f.email_field_tag :email, class: 'form-control' %>
          </div>
        </div>
        
        <div class="form-group">
          <label for="user_address" class="control-label col-md-3 col-sm-3 col-xs-12">Address</label>
          <div class="col-md-6 col-xs-12">
            <%= f.text_field :address, class: 'form-control' %>
          </div>
        </div>
        
        <div class="form-group">
          <label for="user_city" class="control-label col-md-3 col-sm-3 col-xs-12">City</label>
          <div class="col-md-6 col-xs-12">
            <%= f.text_field :city, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="user_state" class="control-label col-md-3 col-sm-3 col-xs-12">State</label>
          <div class="col-md-6 col-xs-12">
            <%= f.text_field :state, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="user_state" class="control-label col-md-3 col-sm-3 col-xs-12">Country</label>
          <div class="col-md-6 col-xs-12">
            <%= f.text_field :country, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="user_mobile_number" class="control-label col-md-3 col-sm-3 col-xs-12">Mobile Number</label>
          <div class="col-md-6 col-xs-12">
            <%= f.text_field :mobile_number, class: 'form-control' %>
          </div>
        </div>

        <div class="ln_solid"></div>

        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
          <button class="btn btn-primary">Update</button>
        </div>
    <% end %>
<%
  end
%>

<%= render 'partials/basic_content' %>