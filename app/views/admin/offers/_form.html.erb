<% if @offer.errors.count > 0 %>
  <ul>
    <% @offer.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<%
  url = @offer.new_record? ? admin_offers_path : admin_offer_path(@offer)
%>
<%= form_for @offer, url: url, html: { class: 'form-horizontal form-label-left' } do |f| %>
  <div class="form-group">
    <label for="deal_company_id" class="control-label col-md-3 col-sm-3 col-xs-12">Company ID</label>
    <div class="col-md-6 col-xs-12">
      <%= f.text_field :company_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="deal_link" class="control-label col-md-3 col-sm-3 col-xs-12">Link</label>
    <div class="col-md-6 col-xs-12">
      <%= f.text_field :link, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="deal_logo" class="control-label col-md-3 col-sm-3 col-xs-12">Logo</label>
    <div class="col-md-6 col-xs-12">
      <%= f.file_field :logo, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="deal_name" class="control-label col-md-3 col-sm-3 col-xs-12">Name</label>
    <div class="col-md-6 col-xs-12">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="deal_instructions" class="control-label col-md-3 col-sm-3 col-xs-12">Instructions</label>
    <div class="col-md-6 col-xs-12">
      <%= f.text_area :instructions, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="deal_amount" class="control-label col-md-3 col-sm-3 col-xs-12">Amount</label>
    <div class="col-md-6 col-xs-12">
      <%= f.text_field :amount, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="deal_cap" class="control-label col-md-3 col-sm-3 col-xs-12">Cap</label>
    <div class="col-md-6 col-xs-12">
      <%= f.text_field :cap, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="deal_active" class="control-label col-md-3 col-sm-3 col-xs-12">Active</label>
    <div class="col-md-6 col-xs-12">
      <%= f.check_box :active, class: 'form-control' %>
    </div>
  </div>

  <div class="ln_solid"></div>

  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <button class="btn btn-primary">Send</button>
  </div>
<% end %>