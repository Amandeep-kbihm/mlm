<%
  @heading = 'Edit User'
  content_for :content do
%>
    <%= form_for @transaction, url: admin_deduct_transaction_path(@user), html: { class: 'form-horizontal form-label-left' } do |f| %>
        <div class="form-group">
          <label for="user_name" class="control-label col-md-3 col-sm-3 col-xs-12">Amount</label>
          <div class="col-md-6 col-xs-12">
            <%= f.text_field :amount, class: 'form-control' %>
          </div>
        </div>

        <div class="ln_solid"></div>

        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
          <button class="btn btn-primary">Deduct</button>
        </div>
    <% end %>
<%
  end
%>

<%= render 'partials/basic_content' %>